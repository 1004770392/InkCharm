<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qpy.inkcharm">

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/inkcharm_log"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name=".views.InkCharmActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".views.RegisterActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".views.InkCharm_Borwse_Article_Activity"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".views.InkCharm_Borwse_Article_CommentArticle_Activity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">

        </activity>
    </application>

</manifest>
